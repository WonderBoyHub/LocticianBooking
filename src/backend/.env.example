# =============================================================================
# LOCTICIAN BOOKING SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment
# NEVER commit .env files to version control!
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection URL
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://loctician_user:secure_password@localhost:5432/loctician_booking

# Test database URL (optional, for running tests)
DATABASE_TEST_URL=postgresql+asyncpg://loctician_user:secure_password@localhost:5432/loctician_booking_test

# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_POOL_RECYCLE=300

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis URL for caching and session storage
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-32-chars-min

# JWT algorithm
ALGORITHM=HS256

# Token expiration times
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Session security
SESSION_SECURE_COOKIES=false
SESSION_HTTPONLY_COOKIES=true
SESSION_SAMESITE=lax

# CSRF protection
CSRF_PROTECTION_ENABLED=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_V1_PREFIX=/api/v1
PROJECT_NAME="Loctician Booking API"
PROJECT_VERSION=1.0.0
DESCRIPTION="Comprehensive booking system for locticians"

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated list)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://loctician.dk

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@loctician.dk
SMTP_FROM_NAME="Loctician Booking System"

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Upload directory path
UPLOAD_PATH=./uploads

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json or text)
LOG_FORMAT=json

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Rate limiting settings
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Rate limiting backend (memory or redis)
RATE_LIMIT_BACKEND=memory

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Enable Prometheus metrics
ENABLE_METRICS=true

# Metrics server port
METRICS_PORT=9090

# Enable health check endpoints
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Enable API documentation
ENABLE_DOCS=true

# Enable SQL query logging in development
SQL_ECHO=false

# =============================================================================
# INSTAGRAM INTEGRATION
# =============================================================================
# Instagram API credentials (optional)
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id

# Enable Instagram integration
ENABLE_INSTAGRAM=false

# =============================================================================
# LOCALIZATION CONFIGURATION
# =============================================================================
# Default timezone
DEFAULT_TIMEZONE=Europe/Copenhagen

# =============================================================================
# BUSINESS RULES CONFIGURATION
# =============================================================================
# Default booking buffer time in minutes
DEFAULT_BOOKING_BUFFER_MINUTES=15

# Maximum advance booking period in days
MAX_ADVANCE_BOOKING_DAYS=90

# Minimum advance booking time in hours
MIN_ADVANCE_BOOKING_HOURS=24

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
# WebSocket ping interval in seconds
WEBSOCKET_PING_INTERVAL=20

# WebSocket ping timeout in seconds
WEBSOCKET_PING_TIMEOUT=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features

# Enable SMS notifications
ENABLE_SMS_NOTIFICATIONS=false

# Enable payment processing
ENABLE_PAYMENTS=false

# Enable analytics tracking
ENABLE_ANALYTICS=false

# Enable GDPR compliance features
ENABLE_GDPR_FEATURES=true

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# External API keys and configurations

# Mollie Payment Integration
MOLLIE_API_KEY=test_your-mollie-api-key-here
MOLLIE_WEBHOOK_SECRET=your-mollie-webhook-secret-for-signature-verification
MOLLIE_TEST_MODE=true

# Danish payment provider (if needed)
PAYMENT_PROVIDER_API_KEY=your-payment-api-key
PAYMENT_PROVIDER_SECRET=your-payment-secret

# SMS provider for notifications (if needed)
SMS_PROVIDER_API_KEY=your-sms-api-key

# Analytics service (if needed)
ANALYTICS_TRACKING_ID=your-analytics-id

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================
# S3 bucket for backups (if using cloud storage)
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# Local backup directory
BACKUP_LOCAL_PATH=./backups